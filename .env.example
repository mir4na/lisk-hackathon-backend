# =============================================================================
# RECEIV3 - NFT Invoice Factoring Platform
# =============================================================================

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
PORT=8080
GIN_MODE=debug  # debug, release, test

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
POSTGRES_USER=receiv3
POSTGRES_PASSWORD=receiv3
POSTGRES_DB=receiv3
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgres://receiv3:receiv3@localhost:5432/receiv3?sslmode=disable

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY_HOURS=24
JWT_REFRESH_EXPIRY_HOURS=168

# -----------------------------------------------------------------------------
# Blockchain (Lisk Sepolia Testnet)
# NOTE: This project is configured for Lisk Sepolia testnet ONLY
# Get testnet ETH from: https://sepolia-faucet.lisk.com/
# -----------------------------------------------------------------------------
PRIVATE_KEY=your_private_key_here
BLOCKCHAIN_RPC_URL=https://rpc.sepolia-api.lisk.com
CHAIN_ID=4202
BLOCK_EXPLORER_URL=https://sepolia-blockscout.lisk.com

# Contract addresses (fill after deployment)
INVOICE_NFT_CONTRACT_ADDRESS=
INVOICE_POOL_CONTRACT_ADDRESS=
MOCK_USDC_CONTRACT_ADDRESS=

# -----------------------------------------------------------------------------
# IPFS / Pinata (Document Storage)
# -----------------------------------------------------------------------------
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key
PINATA_JWT=your_pinata_jwt_token
PINATA_GATEWAY_URL=https://gateway.pinata.cloud/ipfs/

# -----------------------------------------------------------------------------
# File Upload
# -----------------------------------------------------------------------------
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,png,jpg,jpeg

# -----------------------------------------------------------------------------
# Logistics API (JSONCargo)
# -----------------------------------------------------------------------------
JSONCARGO_API_KEY=your_jsoncargo_api_key
JSONCARGO_API_URL=https://api.jsoncargo.com/v1

# -----------------------------------------------------------------------------
# Platform Settings
# -----------------------------------------------------------------------------
PLATFORM_FEE_PERCENTAGE=2.0
DEFAULT_ADVANCE_PERCENTAGE=80.0
MIN_INVOICE_AMOUNT=1000
MAX_INVOICE_AMOUNT=1000000

# -----------------------------------------------------------------------------
# Email (Optional - for notifications)
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@receiv3.io

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION=1m
